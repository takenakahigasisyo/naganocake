<div class="col-sm-2 offset-md-2">
  <div class="mx-auto" >
   <h3 class="m-5">新規会員登録</h3>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


<div class="container">
  <table class="table table-borderless">
   <tr>
      <th>名前</th>
      <td>（姓）</td><td><%= f.text_field :last_name, autofocus: true %></td><td>（名)</td><td><%= f.text_field :first_name %></td>
   </tr>
   <tr>
      <th>フリガナ</th>
      <td>（セイ）</td><td><%= f.text_field :last_name_furigana, autofocus: true %></td><td> （メイ)</td><td><%= f.text_field :first_name_furigana %></td>
   </tr>
    <tr>
      <th>メールアドレス</th>
      <td></td><td><%= f.email_field :email, autofocus: true %></td><td></td><td></td>
   </tr>
   <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td></td><td><%= f.text_field :postcode, autofocus: true %></td><td></td><td></td>
   </tr>
   <tr>
      <th>住所</th>
      <td></td><td><%= f.text_field :address, autofocus: true, style: "width:222%" %></td>
   </tr>
   <tr>
      <th>電話番号（ハイフンなし）</th>
      <td></td><td><%= f.text_field :phone_number, autofocus: true %><td><td></td><td></td>
   </tr>
   <tr>
      <th>パスワード（6文字以上）</th>
      <td></td><td><%= f.password_field :password, autocomplete: "new-password" %></td><td></td><td></td>
   </tr>
   <tr>
      <th>パスワード（確認用）</th>
      <td></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td><td></td><td></td>
   </tr>
  </table>
</div>

<div class="form-group text-center">
   <div class="actions">
      <%= f.submit "新規登録", class: "col-sm-offset-2 mt-4 col-sm-2 btn btn-success" %>
   </div>
</div>

<% end %>
<div class="col-md-8 offset-md-2">
  <div class="mx-auto" >
    <h3 class="m-5">既に登録済みの方</h3>
    <div class="ml-3">
     <%= render "public/shared/links" %>
    </div>
  </div>
</div>
