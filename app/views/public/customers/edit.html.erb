<%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :last_name, "氏名" %>
    <%= f.text_field :last_name, class: 'form-control customer_last_name' %>
  </div>
  <<div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control customer_first_name' %>
  </div>
  <div class="form-group">
    <%= f.label :last_name_furigana, "フリガナ" %>
    <%= f.text_field :last_name_furigana, class: 'form-control customer_last_name_furigana' %>
  </div>
  <div class="form-group">
    <%= f.label :first_name_furigana %>
    <%= f.text_field :first_name_furigana, class: 'form-control customer_first_name_furigana' %>
  </div>
  <div class="form-group">
    <%= f.label :postcode, "郵便番号" %>
    <%= f.text_field :postcode, class: 'form-control customer_postcode' %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: 'form-control customer_address' %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, "電話番号" %>
    <%= f.text_field :phone_number, class: 'form-control customer_phone_number' %>
  </div>
  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email, class: 'form-control customer_email' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>