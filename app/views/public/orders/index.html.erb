<h3>注文履歴一覧</h3>

<table>
    <tr>
        <td>注文日</td>
        <td><配送先</td>
        <td>注文商品</td>
        <td>支払金額</td>
        <td>ステータス</td>
        <td>注文詳細</td>
    </tr>

    <% @orders.each do |order| %>
     <tr>
         <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
         <td><%= "〒" + " " + order.postcode + " " + order.address + " " + order.name %></td>
         <td>
           <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
           <% end %>
         </td>
         <td><%= order.billing_amount %></td>
         <td><%= order.status %></td>
         <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
    <% end %>
</table>