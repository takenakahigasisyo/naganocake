<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h3>注文履歴一覧</h3>

      <table class="table table-bordered">
       <tr>
        <th class="table-active" style="width:10%">注文日</th>
        <th class="table-active" style="width:30%">配送先</th>
        <th class="table-active" style="width:25%">注文商品</th>
        <th class="table-active" style="width:10%">支払金額</th>
        <th class="table-active" style="width:10%">ステータス</th>
        <th class="table-active" style="width:15%">注文詳細</th>
       </tr>

        <% @orders.each do |order| %>
       <tr class="table-light"> <!--レイアウト調整-->
         <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
         <td class="align-middle"><%= "〒" + " " + order.postcode + " " + order.address + " " + order.name %></td>
         <td class="align-middle">
           <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
           <% end %>
         </td>
         <td class="align-middle"><%= order.billing_amount %></td>
         <td class="align-middle"><%= order.status_i18n %></td>
         <td class="align-middle"><%= link_to "表示する", order_path(order.id) %></td>
       </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

