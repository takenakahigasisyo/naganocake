<div class="container">
<div class="row my-3"><div class="col-sm-10 offset-sm-1"><h3>注文情報確認</h3></div></div>
<div class="row">
  <div class="col-sm-7 offset-sm-1">
   <table class="table table-bordered">
     <tr>
       <th class="table-active" style="width:50%">商品名</th>
       <th class="table-active" style="width:20%">単価（税込）</th>
       <th class="table-active" style="width:15%">数量</th>
       <th class="table-active" style="width:15%">小計</th>
     </tr>
     <% sum = 0 %>
     <% current_customer.cart_items.each do |cart_item| %>
     <tr>
       <td class="align-middle" style="word-break:break-all"> <%= image_tag cart_item.item.get_item_image, size: '50x50' %><%= cart_item.item.name %></td>
       <td class="align-middle"><%= cart_item.item.tax_calc %></td>
       <td class="align-middle"><%= cart_item.amount %></td>
       <td class="align-middle"><%= cart_item.sum_of_price %></td>
     </tr>
      <% sum = sum + cart_item.sum_of_price %>
     <% end %>
     </table>
    </div>



 <div class="col-sm-3">
  <table class="table table-bordered">
   <tr>
     <th class="table-active" style="width:50%">送料</th>
     <td><%= @shipping_fee %></td>
   </tr>
   <tr>
     <th class="table-active" style="width:50%">商品合計</th>
     <td><%= sum %></td>
   </tr>
   <tr>
     <th class="table-active" style="width:50%">請求金額</th>
     <td><%= sum + @shipping_fee %></td>
   </tr>
  </table>
 </div>

  <table class="table table-borderless">
   <tr><th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td></tr>
   <tr><th>お届け先</th>
    <td><%= "〒" + " " + @order.postcode + " " + @order.address + " " + @order.name %></td></tr>
  </table>
</div>

    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
     <%= f.hidden_field :payment_method, :value => @order.payment_method %>
     <%= f.hidden_field :postcode, :value => @order.postcode %>
     <%= f.hidden_field :address, :value => @order.address %>
     <%= f.hidden_field :billing_amount, :value => sum + @shipping_fee %>
     <%= f.hidden_field :shipping_fee, :value => @shipping_fee  %>
     <%= f.hidden_field :name, :value => @order.name %>
     <div class="text-center mb-3"><%= f.submit "注文を確定する" , class: "btn btn-success" %></div>
  <% end %>