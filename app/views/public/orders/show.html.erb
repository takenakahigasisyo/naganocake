<h4>注文情報</h4>
<table>
  <tr>
    <td>注文日</td>
    <td><%= @order_show.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
   <tr>
    <td>配送先</td>
    <td><%= "〒" + " " + @order_show.postcode + " " + @order_show.address + " " + @order_show.name %></td>
  </tr>
   <tr>
    <td>支払方法</td>
    <td><%= @order_show.status  %></td>
  </tr>
   <tr>
    <td>ステータス</td></td>
    <td><%= @order_show.payment_method %></td>
  </tr>
</table>

<table>
   <tr>
    <td>商品合計</td>
    <td><%= @order_show. billing_amount %></td>
  </tr>
   <tr>
    <td>配送料</td>
    <td><%= @order_show.shipping_fee %></td>
  </tr>
   <tr>
    <td>ご請求額</td>
    <td><%= @order_show.billing_amount  + @order_show.shipping_fee %></td>
  </tr>
</table>
<table>
   <tr>
    <td>商品</td>
    <td>単価（税込）</td>
    <td>個数</td>
    <td>小計</td>
  </tr>
  <% @order_show.order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.item.price * order_detail.amount %></td>
  </tr>
  <% end %>
</table>
