<div class="container contents justify">
  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 mx-auto">

      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
        <h3>注文情報入力</h3>
 <!--< %= f.radio_button :プロパティ名, "フォームで送る値" %>-->
<!--radio_botton参考　https://qiita.com/shinji0320/items/3299f4d91087d40bbb9b-->

        <h4>支払方法</h4>
          <%= f.radio_button :payment_method, :credit_card, checked: "checked", class: "ml-4" %>
          <%= f.label :payment_method, "credit_card" %><br>

          <%= f.radio_button :payment_method, :transfer, class: "ml-4"%>
          <%= f.label :payment_method, "transfer" %>

        <h4>お届け先</h4>
          <%= f.radio_button :address_option, 0, checked: "checked", class: "ml-4"%>
          <%= f.label :address_0, "ご自身の住所" %><br>
          <div class="ml-5 mb-2">
           〒<%= @customer.full_address %><br>
           <%= @customer.last_name + @customer.first_name %><br>
          </div>

          <%= f.radio_button :address_option, 1, class:"ml-4"%>
          <%= f.label :@customer, "登録済住所から選択" %>
          <div class="ml-5 mb-2">
           <%= f.collection_select(:address_id, current_customer.addresses.all, :id, :address_display) %><br>
          </div>
          <%= f.radio_button :address_option,2, class:"ml-4" %>
           <%= f.label :address,"新しいお届先" %><br>

          <div class="form-group row">
            <div class="col-sm-4">
              <%= f.label :postcode,"郵便番号（ハイフンなし）", class: "ml-5" %></div>
              <%= f.text_field :postcode %>
            </div>
            <div class="form-group row">
            <div class="col-sm-4">
              <%= f.label :address, "住所" ,class: "ml-5" %></div>
              <%= f.text_field :address, size: 40 %>
            </div>
            <div class="form-group row">
            <div class="col-sm-4">
              <%= f.label :name, "宛名", class: "ml-5" %></div>
              <%= f.text_field :name %>

            </div>

        <div class="form-group text-center">
          <div class="actions">
           <%= f.submit '確認画面へ進む', class: "mt-4 col-sm-offset-2 col-sm-2 btn btn-primary" %>
          <% end %>
          </div>
        </div>
    </div>
  </div>
</div>