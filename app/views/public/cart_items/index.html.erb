<div class="container">
  <div class="form-group d-flex d-inline mt-4">
    <h4 class="">ショッピングカート</h4>
    <div class="col text-right mb-2">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>

  <table class="table table-bordered">
    <thead class="thead-light"><!--レイアウト調整-->
      <tr height="center" align="center">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% total_amount = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr class="table-light"><!--レイアウト調整-->
          <td class="align-middle">
            <%= image_tag cart_item.item.get_item_image, size: '100x100' %>
            <%= cart_item.item.name %>
          </td>
          <td class="align-middle text-center">
            <%= (cart_item.item.price * 1.1).floor %>円
          </td>
          <td class="align-middle text-center">
            <%= form_with model: cart_item, url: cart_item_path(cart_item),local: true,method: :patch do |f| %>
              <%= f.number_field :amount, min:1, max:10, id: "amount_cart" %>
              <%= f.submit "変更", class:"btn btn-success btn-sm" %>
            <% end %>
          </td>
          <td class="align-middle text-center">
            <%= (cart_item.item.price * 1.1).floor * cart_item.amount %>円
          </td>
          <td class="align-middle text-center">
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger btn-sm" %>
          </td>
        </tr>
        <% total_amount += (cart_item.item.price * 1.1 * cart_item.amount) %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <div class="row mb-2">
    <div class="col-md-8">
      <div class="p-2 g-col-6">

        <%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-4">
      
      <table class="table table-bordered">
        <tr>
          <td class="table-active" style="background-color: rgb(222 226 230);">合計金額</td><!--力技レイアウト調整-->
          <td class="table-light" scope="table-active"><%= total_amount.floor.to_s(:delimited) %>円</td><!--レイアウト調整-->
        </tr>
      </table>
    </div>
  </div>
  
  <div class = "row">
    <div class="col-md-4 offset-md-5">
     <span>
        <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success btn-lg" %>
      </span>
    </div>
  </div>

</div>

