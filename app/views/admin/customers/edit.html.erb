<div class='container'>
<h2><%= @customer_name %>さんの会員詳細</h2>


<%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
  <table class='table table-borderless'>
    <tr>
      <th>会員ID</th><td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th><td><%= f.text_field :last_name, class: 'form-control customer_last_name' %></td><td><%= f.text_field :first_name, class: 'form-control customer_first_name' %></td>
    </tr>
    <tr>
      <th>フリガナ</th><td><%= f.text_field :last_name_furigana, class: 'form-control customer_last_name_furigana' %></td><td><%= f.text_field :first_name_furigana, class: 'form-control customer_first_name_furigana' %></td>
    </tr>
    <tr>
      <th>郵便番号</th><td><%= f.text_field :postcode, class: 'form-control customer_postcode' %></td>
    </tr>
    <tr>
      <th>住所</th><td><%= f.text_field :address, class: 'form-control customer_address', style: "width:208%"  %></td>
    </tr>
    <tr>
      <th>電話番号</th><td><%= f.text_field :phone_number, class: 'form-control customer_phone_number' %></td>
    </tr>
    <tr>
      <th>メールアドレス</th><td><%= f.text_field :email, class: 'form-control customer_email' %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active_true,"有効" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active_false,"退会" %>
       </td>
    </tr>
    <tr>
      <th></th><td><%= f.submit "変更を保存",class: 'btn btn-success' %></td>
    </tr>
  </table>
  <% end %>

</div>