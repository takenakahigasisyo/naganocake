<div class='container'>
<h3>会員一覧</h3>

<table class='table'>
  <thead class="thead-light">
    <tr>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr class="table-light"><!--レイアウト調整-->
        <td><%= customer.id %></td>
        <% @customer_name = customer.last_name + customer.first_name %>
        <td><%= link_to admin_customer_path(customer.id) do %>
          <%= @customer_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active %>
            <p class="text-success">有効</p>
          <% else %>
            <p class="text-secondary">退会</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>
</div>
