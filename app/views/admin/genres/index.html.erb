
<h3>ジャンル一覧・追加</h3>
<br>
<br>
<div class='row'>
  <%= form_with model:@genre, url: admin_genres_path, method: :post, local:true do |f| %>
    <div class="form-group">
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, placeholder: "ジャンル名",  class: 'form-control genre_name' %>
    </div>
    <div class="form-group">
      <%= f.submit "新規登録", class: 'btn btn-outline-success' %>
    </div>
  <% end %>
</div>

<br>
<br>
<table class='table table-hover table-inverse'>
  <thead class="thead-light">
    <tr>
     <th>ジャンル</th>
     <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), method: :get, class: 'btn btn-outline-dark' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>