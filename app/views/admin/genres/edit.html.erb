<div class='container'>
<h3>ジャンル編集</h3>

<%= form_with model:@genre, url: admin_genre_path, method: :patch, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name,  class: 'form-control genre_name', style: "width:30%" %>
  </div>
  <div class="form-group">
    <%= f.submit "変更を保存", class: 'btn btn-outline-success' %>
  </div>
<% end %>
</div>