<div class="container py-5">
  <h2>注文詳細履歴</h2>
  <div class="row">
    
      <div class="col">
        <table class="table table-borderless">
          <tr><th>購入者</th><td><%= @order.customer.last_name %><%= @order.customer.first_name %></td></tr>
          <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
          <tr><th>配送先</th><td>〒<%= @order.postcode %> <%= @order.address %><br><%= @order.name %></td></tr>
          <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
          <tr><th>注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
              <%= f.select :status, options_for_select([["入金待ち","payment_waiting"], ["入金確認","payment_confirmation"], ["製作中","production"], ["発送準備中","preparation_shipping"], ["発送済み","shipped"]], selected: @selected_status) %>
              <%= f.submit '更新', class: "btn btn-success btn-sm" %>
            <% end %>
          </td>
          </tr>
        </table>
      </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table thead-light">
          <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
          </thead>
          <% total_amount = 0 %>
          <% @order_detail.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_on_order.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price_on_order * order_detail.amount).to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch do |f| %>
                <%= f.select :making_status, options_for_select([["着手不可","unable_to_start"], ["製作待ち","waiting_for_production"], ["製作中","production"], ["製作完了","production_completed"]], order_detail.making_status) %>
                <%= f.submit '更新', class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
          </tr>
          
          <% total_amount += (order_detail.price_on_order * order_detail.amount) %>
          
          <% end %>
      </table>
    </div>
    <div class="col-3 d-flex align-items-end">
      <table class="table table-borderless">
        <tr><th>商品合計</th><td><%= total_amount.to_s(:delimited) %>円</td></tr>
        <tr><th>送料</th><td><%= @order.shipping_fee.to_s(:delimited) %>円</td></tr>
        <tr><th>請求金額合計</th><td class="font-weight-bold"><%= (total_amount + @order.shipping_fee).to_s(:delimited) %>円</td></tr>
      </table>
    </div>
  </div>
</div>