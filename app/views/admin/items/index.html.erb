<div class="container py-5">
  <div class="row ">
    <div class="col-md-3">
      <h2>商品一覧</h2>
    </div>
      <div class="offset-md-8">
        <%= link_to new_admin_item_path,class: 'nav-link',style: 'border-radius: 50%; box-shadow: 2px 2px 2px 0 rgba(0, 0, 0, 0.5)' do %>
          <i class="fa-regular fa-plus"></i>
        <% end %>
      </div>
    </div>
    <br>
    <table class="table thead-light">
      <thead class="thead-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
      </thead>
      <% @items.each do |item| %>
      <tr class="table-light">
        <td><%= item.id %></td>
        <td><%= link_to "#{item.name}", admin_item_path(item.id) %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
        <% if item.is_saled %>
          <p style="color: red;">販売中</p>
        <% else %>
          <p style="color: blue;">販売停止中</p>
        <% end %>
        </td>
        <!--<td><　%= item.is_saled ? '販売中' : '販売停止中' %></td>-->
      </tr>
      <% end %>
    </table>
  
  <div class="item__paginate"><%= paginate @items %></div>
</div>