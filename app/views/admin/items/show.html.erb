<div class="container py-5">
  <h2 class="pb-5 ml-5">商品説明</h2>
  <div class="row">
    
      <div class="col-3">
        <%= image_tag @item.get_item_image, size:'297x210' %>
      </div>
      <div class="offset-1 col-4">
        <table class="table table-borderless">
          <tr><th>商品名</th><td><%= @item.name %></td></tr>
          <tr><th>商品説明</th><td><%= @item.explanation %></td></tr>
          <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
          <tr><th>税込価格<br>(税抜価格)</th><td style="vertical-align:middle"><%= @tax_included_price.floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td></tr>
          <tr><th>販売ステータス</th>
          <td>
            <% if @item.is_saled %>
            <div style="color: red;">販売中</div>
          <% else %>
            <div style="color: blue;">販売停止中</div>
          <% end %>
          </td></tr>
        </table>
        
        
    </div>
    
  </div>
  <div class="row justify-content-around">
  <%= link_to "編集する", edit_admin_item_path(@item.id),class: 'btn btn-success btn-lg' %>
  </div>
</div>